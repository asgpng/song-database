-- ---
-- Table 'user'
-- Parent user table
-- ---

DROP TABLE IF EXISTS `user`;

CREATE TABLE `user` (
  `netID` VARCHAR(12) NOT NULL,
  `user_type` VARCHAR(16) NOT NULL DEFAULT 'student',
  `name` VARCHAR(128) NULL,
  PRIMARY KEY (`netID`)
) COMMENT 'Parent user table';

-- ---
-- Table 'students'
-- student table
-- ---

DROP TABLE IF EXISTS `students`;

CREATE TABLE `students` (
  `netID` VARCHAR(12) NOT NULL,
  `advisor_netID` VARCHAR(12) NULL,
  `forms_submitted` TINYINT NULL,
  PRIMARY KEY (`netID`)
) COMMENT 'student table';

-- ---
-- Table 'faculty'
--
-- ---

DROP TABLE IF EXISTS `faculty`;

CREATE TABLE `faculty` (
  `netID` VARCHAR(12) NOT NULL,
  `advisee_netIDs` TINYINT NULL,
  `advisee_requests` TINYINT NULL,
  `readee_netIDs` TINYINT NULL,
  `readee_requests` TINYINT NULL,
  PRIMARY KEY (`netID`)
);

-- ---
-- Table 'form'
--
-- ---
DROP TABLE IF EXISTS `form`;

CREATE TABLE `form` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `form_type` ENUM(20) NOT NULL,
  `student_netID` VARCHAR(12) NOT NULL,
  `advisor_netID` VARCHAR(12) NOT NULL,
  `project_title` VARCHAR(128) NOT NULL,
  `date` DATE NOT NULL,
  PRIMARY KEY (`id`),
  FOREIGN KEY (`student_netID`) REFERENCES students(netID),
  FOREIGN KEY (`advisor_netID`) REFERENCES faculty(netID)
) COMMENT 'form table';

-- ---
-- Table 'signup'
--
-- ---
DROP TABLE IF EXISTS `signup`;

CREATE TABLE `signup` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `class_year` SMALLINT(4) NOT NULL,
  `coursework` VARCHAR(20) NOT NULL,
  `description` TEXT(1000) NOT NULL,
  `advisor_department` VARCHAR(64) NOT NULL,
  PRIMARY KEY (`id`),
  FOREIGN KEY (`id`) REFERENCES form(id)
) COMMENT 'signup form table';

-- ---
-- Table 'checkpoint'
--
-- ---

DROP TABLE IF EXISTS `checkpoint`;

CREATE TABLE `checkpoint` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `number_of_meetings` TINYINT(10) NOT NULL,
  `student_comments` TEXT(1000) NOT NULL,
  `advisor_read` bit(1) NOT NULL,
  `advisor_more_meetings` bit(1) NOT NULL,
  `student_progress_eval` TINYINT(10) NOT NULL,
  `advisor_comments` TEXT(1000) NOT NULL,
  PRIMARY KEY (`id`),
  FOREIGN KEY (`id`) REFERENCES form(id)
);

-- ---
-- Table 'february'
--
-- ---

DROP TABLE IF EXISTS `february`;

CREATE TABLE `february` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `number_of_meetings` TINYINT(10) NOT NULL,
  `student_comments` TEXT(1000) NOT NULL,
  `advisor_read` bit(1) NOT NULL,
  `advisor_more_meetings` bit(1) NOT NULL,
  `student_progress_eval` TINYINT(10) NOT NULL,
  `advisor_comments` TEXT(1000) NOT NULL,
  PRIMARY KEY (`id`),
  FOREIGN KEY (`id`) REFERENCES form(id)
);

-- ---
-- Table 'second_reader'
--
-- ---

DROP TABLE IF EXISTS `second_reader`;

CREATE TABLE `second_reader` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `class_year` INT(4) NOT NULL,
  `description` TEXT(1000) NOT NULL,
  `sr_netID` VARCHAR(12) NOT NULL,
  `sr_department` VARCHAR(64) NOT NULL,
  PRIMARY KEY (`id`),
  FOREIGN KEY (`id`) REFERENCES form(id)
);

